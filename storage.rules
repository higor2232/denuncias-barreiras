rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload images to a specific path (e.g., 'reports/{userId}/{fileName}')
    match /reports/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // Or more restrictive for public access
    }
    // Allow anonymous users to upload to a temporary or specific path
    match /anonymous_reports/{reportId}/{fileName} {
        allow write: if true; // Consider adding size/type validation
        allow read: if true;
    }

    // Allow uploads to the denuncias_imagens path
    match /denuncias_imagens/{fileName} {
      allow write: if request.resource.size < 5 * 1024 * 1024 &&
                      (request.resource.contentType == 'image/jpeg' || request.resource.contentType == 'image/png');
      allow read: if true;  // Allows anyone to read. Adjust if images should be private.
    }
  }
}
